<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pin_lock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="com.example.craigpauga.reality.PinLock.PinLockActivity"
    android:fitsSystemWindows="true">


        <com.andrognito.pinlockview.PinLockView
            android:id="@+id/pin_lock_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:pinLength="4"
            app:keypadTextColor="#E6E6E6"
            app:keypadTextSize="15dp"
            app:keypadButtonSize="72dp"
            app:keypadVerticalSpacing="8dp"
            app:keypadHorizontalSpacing="12dp"
            app:keypadDeleteButtonSize="16dp"
            app:keypadShowDeleteButton="false"
            app:keypadDeleteButtonPressedColor="#C8C8C8"
            android:background="@drawable/pinlockroundedview"
            android:layout_centerInParent="true"
            android:elevation="10dp"
            app:theme="@style/AppTheme"
            />
        <com.andrognito.pinlockview.IndicatorDots
            android:id="@+id/indicator_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="70dp"
            app:dotSpacing="12dp"
            app:dotDiameter="48dp"
            app:dotEmptyBackground="@drawable/not_filled_dot"
            app:dotFilledBackground="@drawable/filled_dot"
            />

        <TextView
            android:text="Forgot Pin?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgotPin"
            android:layout_below="@+id/pin_lock_view"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:fontFamily="serif"
            android:layout_marginTop="25dp"
            />

</RelativeLayout>
