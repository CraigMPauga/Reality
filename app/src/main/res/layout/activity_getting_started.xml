<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.craigpauga.reality.OpeningActivity.gettingStarted"
    android:id="@+id/activity_getting_started"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    android:fitsSystemWindows="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="Login  "
              android:id="@+id/loginShortcut"
              android:textColor="@color/white"
              android:layout_alignParentRight="true"
              android:layout_gravity="center_vertical"
              android:textSize="@dimen/default_text_size"/>

        </RelativeLayout>

  <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginTop="0dp"
        android:id="@+id/fragment_container"
      android:background="@color/colorPrimary"
      android:layout_gravity="top">

    </RelativeLayout>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorPrimary"
      >

    <Button
        android:id="@+id/gettingStartedButton"
        android:text="Start Your Estate!"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gettingstartedbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="Contact Us"
          android:textColor="@color/white"
          android:id="@+id/contactUs"
          android:gravity="center"
          />
  </LinearLayout>


</LinearLayout>
